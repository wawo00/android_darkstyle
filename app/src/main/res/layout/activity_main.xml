<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 顶部标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        app:title="@string/app_name"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 滚动内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 欢迎标题 -->
            <TextView
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- 欢迎描述 -->
            <TextView
                android:id="@+id/tvWelcomeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_description"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:alpha="0.7" />

            <!-- 当前主题信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/gray_500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCurrentThemeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_theme"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvCurrentTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/system_default"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 主题切换按钮 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择主题："
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- 浅色模式按钮 -->
            <Button
                android:id="@+id/btnLightMode"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/light_mode"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconGravity="textStart"
                app:cornerRadius="12dp" />

            <!-- 深色模式按钮 -->
            <Button
                android:id="@+id/btnDarkMode"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/dark_mode"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconGravity="textStart"
                app:cornerRadius="12dp" />

            <!-- 跟随系统按钮 -->
            <Button
                android:id="@+id/btnSystemDefault"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/system_default"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconGravity="textStart"
                app:cornerRadius="12dp" />

            <!-- 功能特点卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/gray_500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvThemeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_info"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvThemeDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_description"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvFeatureTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvFeature1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_1"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvFeature2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_2"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvFeature3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_3"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:alpha="0.7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvFeature4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_4"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:alpha="0.7" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
